<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="56dp">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_restaurants"
        android:name="com.mickael.go4lunch.activity.map.RestaurantFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:visibility="visible"
        app:layoutManager="LinearLayoutManager"
        tools:context=".ui.map.fragment.restaurant.RestaurantFragment"
        tools:listitem="@layout/item_restaurant" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_restaurants_error_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No restaurants found"
        android:textSize="20sp"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
